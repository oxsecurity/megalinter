    && find . -type f -name _musllinux.py -exec sed -i 's|def _get_musl_version.*:|\0\n    return _MuslVersion(major=1, minor=2)|g' \{\} \; \
    && PYTHONDONTWRITEBYTECODE=1 pip3 install --cache-dir=/var/cache/pip /megalinter

