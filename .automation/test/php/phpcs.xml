<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <rule ref="PEAR.Commenting">
        <type>error</type>
    </rule>
    <rule ref="PEAR.Functions">
        <type>warning</type>
    </rule>
    <rule ref="PEAR.WhiteSpace">
        <type>warning</type>
    </rule>
</ruleset>
